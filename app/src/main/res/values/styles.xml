<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DndAppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="DndAppNumberEditText" parent="DndAppEditText">
        <item name="android:inputType">number</item>
    </style>

    <style name="DndAppCharacteristicColumn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DndAppCharacteristicView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DndAppCharacteristicLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DndAppCharacteristicValue" parent="DndAppCharacteristicLabel">
        <item name="android:textAppearance">@style/Text.Header</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
