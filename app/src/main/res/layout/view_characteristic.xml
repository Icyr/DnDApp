<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.CharacteristicView">

    <TextView
        android:id="@+id/characteristic_label"
        style="@style/DndAppCharacteristicLabel" />

    <TextView
        android:id="@+id/characteristic_value"
        style="@style/DndAppCharacteristicValue" />

    <TextView
        android:id="@+id/characteristic_bonus"
        style="@style/DndAppCharacteristicLabel" />
</LinearLayout>
